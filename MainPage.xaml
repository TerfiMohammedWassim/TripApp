<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Salesman Travel Optimizer"
    x:Class="TripApp.MainPage"
    BackgroundColor="#f8f9fa">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">
            <!-- Header Section -->
            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <Label Text="Traveling Salesman Solver" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#212529"
                       Margin="0,0,0,8" />

                <Label Text="Generate random cities and find optimal routes using genetic algorithms" 
                       FontSize="16" 
                       HorizontalOptions="Center"
                       TextColor="#6c757d"
                       Margin="0,0,0,20" />

                <!-- Settings Cards -->
                <Frame BorderColor="Transparent" 
                       BackgroundColor="White" 
                       CornerRadius="16" 
                       HasShadow="True"
                       Padding="0"
                       Margin="0,0,0,15">
                    <Grid ColumnDefinitions="*,*,*" Padding="0">
                        <!-- Cities Settings -->
                        <Border Grid.Column="0" 
                                StrokeShape="RoundRectangle 16,16,0,0"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                BackgroundColor="White">
                            <VerticalStackLayout Padding="20" Spacing="15">
                                <Label Text="Cities" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#212529" />

                                <Border StrokeShape="RoundRectangle 8"
                                        Stroke="#e9ecef"
                                        StrokeThickness="1"
                                        Padding="10,0">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <Label Grid.Column="0" 
                                               Text="Number:" 
                                               VerticalOptions="Center" 
                                               TextColor="#495057" />
                                        <Entry Grid.Column="1" 
                                               x:Name="CitiesCountEntry" 
                                               Text="20" 
                                               Keyboard="Numeric" 
                                               TextColor="#212529"
                                               BackgroundColor="Transparent"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Border>

                                <Button x:Name="GenerateCitiesButton" 
                                        Text="Generate Cities" 
                                        BackgroundColor="#0d6efd"
                                        TextColor="White"
                                        CornerRadius="8"
                                        FontAttributes="Bold"
                                        HeightRequest="45"
                                        Clicked="OnGenerateCitiesClicked"/>
                            </VerticalStackLayout>
                        </Border>

                        
                        <Border Grid.Column="1" 
                                StrokeShape="RoundRectangle 0,0,0,0"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                BackgroundColor="White">
                            <VerticalStackLayout Padding="20" Spacing="15">
                                <Label Text="Algorithm" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#212529" />

                                <Border StrokeShape="RoundRectangle 8"
                                        Stroke="#e9ecef"
                                        StrokeThickness="1"
                                        Padding="10,0">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <Label Grid.Column="0" 
                                               Text="Population:" 
                                               VerticalOptions="Center" 
                                               TextColor="#495057" />
                                        <Entry Grid.Column="1" 
                                               x:Name="PopulationSizeEntry" 
                                               Text="100" 
                                               Keyboard="Numeric" 
                                               TextColor="#212529"
                                               BackgroundColor="Transparent"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Border>

                                <Border StrokeShape="RoundRectangle 8"
                                        Stroke="#e9ecef"
                                        StrokeThickness="1"
                                        Padding="10,0">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <Label Grid.Column="0" 
                                               Text="Generations:" 
                                               VerticalOptions="Center" 
                                               TextColor="#495057" />
                                        <Entry Grid.Column="1" 
                                               x:Name="GenerationsEntry" 
                                               Text="1000" 
                                               Keyboard="Numeric" 
                                               TextColor="#212529"
                                               BackgroundColor="Transparent"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Parameters Settings -->
                        <Border Grid.Column="2" 
                                StrokeShape="RoundRectangle 0,16,16,0"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                BackgroundColor="White">
                            <VerticalStackLayout Padding="20" Spacing="15">
                                <Label Text="Parameters" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#212529" />

                                <Border StrokeShape="RoundRectangle 8"
                                        Stroke="#e9ecef"
                                        StrokeThickness="1"
                                        Padding="10,0">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                        <Label Grid.Column="0" 
                                               Text="Mutation Rate:" 
                                               VerticalOptions="Center" 
                                               TextColor="#495057" />
                                        <Entry Grid.Column="1" 
                                               x:Name="MutationRateEntry" 
                                               Text="0.01" 
                                               Keyboard="Numeric" 
                                               TextColor="#212529"
                                               BackgroundColor="Transparent"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Border>

                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                    <Label Grid.Column="0" 
                                           Text="Elitism:" 
                                           VerticalOptions="Center" 
                                           TextColor="#495057" />
                                    <CheckBox Grid.Column="1" 
                                              x:Name="ElitismCheckBox" 
                                              IsChecked="True"
                                              Color="#0d6efd" />
                                </Grid>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </Frame>

                <Button x:Name="SolveButton" 
                        Text="Solve TSP Problem" 
                        BackgroundColor="#198754" 
                        TextColor="White" 
                        CornerRadius="10"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="50"
                        Clicked="OnSolveClicked" />
            </VerticalStackLayout>

            <!-- Visualization Section -->
            <Frame Grid.Row="1" 
                   BorderColor="Transparent" 
                   BackgroundColor="White" 
                   CornerRadius="16" 
                   HasShadow="True"
                   Padding="0"
                   Margin="0,0,0,0">
                <Grid RowDefinitions="Auto,*" Padding="20">
                    <Label Text="Network Visualization" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="#212529"
                           Margin="0,5,0,20" />

                    <Border Grid.Row="1"
                            StrokeShape="RoundRectangle 12"
                            Stroke="#e9ecef"
                            StrokeThickness="1">
                        <GraphicsView x:Name="TspCanvas" 
                                     BackgroundColor="#f8f9fa"
                                     HeightRequest="500" />
                    </Border>
                </Grid>
            </Frame>

            <!-- Results Section -->
            <Frame Grid.Row="2" 
                   BorderColor="Transparent" 
                   BackgroundColor="White" 
                   CornerRadius="16" 
                   HasShadow="True"
                   Padding="0">
                <Grid RowDefinitions="Auto,*" ColumnDefinitions="1*,1*" Padding="20" RowSpacing="15">
                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Algorithm Status" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#212529" />

                    <Label Grid.Row="0" Grid.Column="1" 
                           Text="Optimal Route" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#212529" />

                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="12">
                        <Border StrokeShape="RoundRectangle 8"
                                Stroke="#e9ecef"
                                StrokeThickness="1"
                                Padding="15,10">
                            <Label Text="Generation: 0" 
                                   x:Name="GenerationLabel" 
                                   TextColor="#495057"
                                   FontSize="15" />
                        </Border>

                        <Border StrokeShape="RoundRectangle 8"
                                Stroke="#e9ecef"
                                StrokeThickness="1"
                                Padding="15,10">
                            <Label Text="Best Fitness: 0.0" 
                                   x:Name="FitnessLabel" 
                                   TextColor="#495057"
                                   FontSize="15" />
                        </Border>

                        <Border StrokeShape="RoundRectangle 8"
                                Stroke="#e9ecef"
                                StrokeThickness="1"
                                Padding="15,10">
                            <Label Text="Distance: 0 km" 
                                   x:Name="DistanceLabel" 
                                   TextColor="#495057"
                                   FontSize="15" />
                        </Border>

                        <ProgressBar x:Name="AlgorithmProgress" 
                                     Progress="0"
                                     ProgressColor="#0d6efd"
                                     BackgroundColor="#e9ecef"
                                     HeightRequest="10"
                                     Margin="0,5,0,0" />
                    </VerticalStackLayout>

                    <Border Grid.Row="1" Grid.Column="1"
                            StrokeShape="RoundRectangle 8"
                            Stroke="#e9ecef"
                            StrokeThickness="1">
                        <ScrollView Padding="15,10">
                            <Label x:Name="SolutionPathLabel" 
                                   Text="No solution yet. Click 'Solve' to find optimal route."
                                   TextColor="#6c757d"
                                   FontSize="15" />
                        </ScrollView>
                    </Border>
                </Grid>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>